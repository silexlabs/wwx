/** GENERAL **/
@import 'nib'

global-reset()

*
  box-sizing border-box

body
  min-height 740px
  background-image radial-gradient(#eee, #abc), url("images/logo.png")
  background-position center-bottom, 20px 20px
  background-repeat no-repeat, repeat

body
  -webkit-font-smoothing antialiased

/** STEP STYLES **/
.step
  width 900px
  height 600px
  min-height 500px

  background-color rgba(255,255,255,0.8)

  padding 40px 40px
  border-radius 4px

  box-shadow 1px 1px 8px rgba(0, 0, 0, .2), inset 1px 1px 4px rgba(255, 255, 255, .8)
  border 1px solid rgba(0, 0, 0, .25)

  color #666
  text-shadow 1px 1px 1px rgba(0, 0, 0, .2)

  letter-spacing -1px
  opacity 0.2
  transition opacity 1s

/* fade out inactive slides */
.step.active, .step.nested-active
  opacity 1

@import 'typography'
@import 'layout'
@import 'effects'