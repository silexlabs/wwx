blurs = 8px

body
  .bg
    position fixed
    width 100%
    height 100%
    background-image url("images/logo.png")
    background-position 20px 20px
    background-repeat no-repeat
    transition -webkit-filter 2s
    opacity 0.2
    z-index 1000
    pointer-events none
    &.blur
      -webkit-filter blur(blurs)
      -moz-filter blur(blurs)
      -o-filter blur(blurs)
      -ms-filter blur(blurs)
      filter blur(blurs)